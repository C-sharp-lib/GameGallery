@model GameGallery.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 offset-md-3 offset-lg-3 offset-xl-3">
        <div class="card-form card-dark shadow-lg p-3 border-radius-lg mt-7">
            <h1 class="text-center ubuntu-bold mt-3 text-success">Register</h1>
            <div class="card-body p-7">
                <form asp-action="RegisterUser" asp-controller="Users" method="post" id="RegisterForm">
                    <div asp-validation-summary="All" class="text-danger ubuntu-bold list-no-style"></div>
                    <div class="form-group">
                        <div class="alert-outline-danger validationAlert" role="alert">
                            <span asp-validation-for="FirstName" class="text-danger ubuntu-bold"></span>
                        </div>
                        <input type="text" asp-for="FirstName" class="form-control ubuntu-bold" placeholder="First Name" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <div class="alert-outline-danger validationAlert" role="alert">
                            <span asp-validation-for="LastName" class="text-danger ubuntu-bold"></span>
                        </div>
                        <input type="text" asp-for="LastName" class="form-control ubuntu-bold" placeholder="Last Name" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <div class="alert-outline-danger validationAlert" role="alert">
                            <span asp-validation-for="Username" class="text-danger ubuntu-bold"></span>
                        </div>
                        <input type="text" asp-for="Username" class="form-control ubuntu-bold" placeholder="Username" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <div class="alert-outline-danger validationAlert" role="alert">
                            <span asp-validation-for="Email" class="text-danger ubuntu-bold"></span>
                        </div>
                        <input type="email" asp-for="Email" class="form-control ubuntu-bold" placeholder="Email" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <div class="alert-outline-danger validationAlert" role="alert">
                            <span asp-validation-for="Password" class="text-danger ubuntu-bold"></span>
                        </div>
                        <input type="password" asp-for="Password" class="form-control ubuntu-bold" placeholder="Password" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <div class="alert-outline-danger validationAlert" role="alert">
                            <span asp-validation-for="Confirmed" class="text-danger ubuntu-bold"></span>
                        </div>
                        <input type="password" asp-for="Confirmed" class="form-control ubuntu-bold" placeholder="Confirm Password" autocomplete="off">
                    </div>
                    <button type="submit" class="custom-btn btn-4 button ubuntu-bold"><span>Register</span></button>
                </form>
            </div>
        </div>
    </div>
</div>
