@{
    Layout = "_Layout";
}

<div class="container">
    <div class="product-image">
        <img src="@Url.Content($"~/img/{Model.Games.ImageUrl}.png")" alt="@Model.Games.Title" class="product-pic">
        <div class="dots">
            <a href="#!" class="active"><i>1</i></a>
            <a href="#!"><i>2</i></a>
            <a href="#!"><i>3</i></a>
            <a href="#!"><i>4</i></a>
        </div>
    </div>

    <div class="product-details">
        <header>
            <h1 class="title">@Model.Games.Title</h1>
            <span class="colorCat">@Model.Genres.FullName</span>
            <div class="price">
                <span class="before">$@Model.Games.PriceBefore.ToString()</span>
                <span class="current">$@Model.Games.Price.ToString()</span>
            </div>
            <div class="rate">
                <a href="#!" class="active">★</a>
                <a href="#!" class="active">★</a>
                <a href="#!" class="active">★</a>
                <a href="#!">★</a>
                <a href="#!">★</a>
            </div>
        </header>
        <div class="text-container">
            <h5>Description</h5>
            <p>@Model.Games.Description</p>
        </div>
